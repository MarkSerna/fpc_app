<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        tools:text="1"/>

    <ImageView
        android:id="@+id/ivTeamLogoStandings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvTeamNameStandings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Nombre Largo del Equipo"/>

    <TextView
        android:id="@+id/tvPlayed"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="38"/>

    <TextView
        android:id="@+id/tvWins"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="20"/>

    <TextView
        android:id="@+id/tvDraws"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="10"/>

    <TextView
        android:id="@+id/tvLosses"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="8"/>

    <TextView
        android:id="@+id/tvGoalDifference"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="+25"/>

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        tools:text="70"/>

</LinearLayout>
